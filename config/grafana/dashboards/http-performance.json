{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 2,
  "links": [
    {
      "title": "Pyroscope Overview",
      "url": "/d/pyroscope-java-overview",
      "type": "link"
    },
    {
      "title": "JVM Metrics",
      "url": "/d/jvm-metrics-deep-dive",
      "type": "link"
    }
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
        "query": "label_values(http_server_requests_seconds_count{job=\"vertx-apps\"}, instance)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": "$__all" },
        "sort": 1
      },
      {
        "name": "method",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
        "query": "label_values(http_server_requests_seconds_count{job=\"vertx-apps\"}, method)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": "$__all" },
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate by Endpoint",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (uri) (rate(http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\", method=~\"$method\"}[1m]))",
          "legendFormat": "{{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 10, "lineWidth": 2 }
        }
      }
    },
    {
      "id": 2,
      "title": "Request Rate by Instance",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum by (instance) (rate(http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\"}[1m]))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 15 }
        }
      }
    },
    {
      "id": 3,
      "title": "Total Requests (counter)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum by (instance) (http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\"})",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 10,
      "title": "Average Latency by Endpoint",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum by (uri) (rate(http_server_requests_seconds_sum{job=\"vertx-apps\", instance=~\"$instance\", method=~\"$method\"}[1m])) / sum by (uri) (rate(http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\", method=~\"$method\"}[1m]))",
          "legendFormat": "{{uri}} avg"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 11,
      "title": "Latency p50 / p95 / p99",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"vertx-apps\", instance=~\"$instance\"}[1m])))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"vertx-apps\", instance=~\"$instance\"}[1m])))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"vertx-apps\", instance=~\"$instance\"}[1m])))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "fillOpacity": 5, "lineWidth": 2 }
        }
      }
    },
    {
      "id": 20,
      "title": "Error Rate (5xx)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "sum by (instance) (rate(http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\", status=~\"5..\"}[1m]))",
          "legendFormat": "{{instance}} 5xx"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 30, "lineWidth": 2 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.01 }
            ]
          }
        }
      }
    },
    {
      "id": 21,
      "title": "Response Status Distribution",
      "type": "piechart",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "targets": [
        {
          "expr": "sum by (status) (increase(http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\"}[1h]))",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 30,
      "title": "Slowest Endpoints (avg latency, last 5m)",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 40 },
      "targets": [
        {
          "expr": "topk(10, sum by (uri) (rate(http_server_requests_seconds_sum{job=\"vertx-apps\", instance=~\"$instance\"}[5m])) / sum by (uri) (rate(http_server_requests_seconds_count{job=\"vertx-apps\", instance=~\"$instance\"}[5m])))",
          "legendFormat": "{{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["http", "vertx", "latency", "performance"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "HTTP Performance",
  "uid": "http-performance"
}
