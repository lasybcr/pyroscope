{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 2,
  "links": [
    { "title": "Pyroscope Overview", "url": "/d/pyroscope-java-overview", "type": "link" },
    { "title": "JVM Metrics", "url": "/d/jvm-metrics-deep-dive", "type": "link" },
    { "title": "HTTP Performance", "url": "/d/http-performance", "type": "link" }
  ],
  "templating": { "list": [] },
  "panels": [
    {
      "id": 1,
      "title": "CPU — API Gateway vs Order Service",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"jvm\", instance=\"api-gateway:9404\"}[1m])",
          "legendFormat": "API Gateway"
        },
        {
          "expr": "rate(process_cpu_seconds_total{job=\"jvm\", instance=\"order-service:9404\"}[1m])",
          "legendFormat": "Order Service"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "custom": { "fillOpacity": 15, "lineWidth": 2 } }
      }
    },
    {
      "id": 2,
      "title": "Heap Used — API Gateway vs Order Service",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum by (instance) (jvm_memory_bytes_used{job=\"jvm\", area=\"heap\", instance=\"api-gateway:9404\"})",
          "legendFormat": "API Gateway heap"
        },
        {
          "expr": "sum by (instance) (jvm_memory_bytes_used{job=\"jvm\", area=\"heap\", instance=\"order-service:9404\"})",
          "legendFormat": "Order Service heap"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes", "custom": { "fillOpacity": 15, "lineWidth": 2 } }
      }
    },
    {
      "id": 3,
      "title": "GC Pause Rate — API Gateway vs Order Service",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(jvm_gc_collection_seconds_sum{job=\"jvm\", instance=\"api-gateway:9404\"}[1m])",
          "legendFormat": "API Gateway — {{action}}"
        },
        {
          "expr": "rate(jvm_gc_collection_seconds_sum{job=\"jvm\", instance=\"order-service:9404\"}[1m])",
          "legendFormat": "Order Service — {{action}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "fillOpacity": 20, "drawStyle": "bars" } }
      }
    },
    {
      "id": 4,
      "title": "Thread Count — API Gateway vs Order Service",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "jvm_threads_current{job=\"jvm\", instance=\"api-gateway:9404\"}",
          "legendFormat": "API Gateway threads"
        },
        {
          "expr": "jvm_threads_current{job=\"jvm\", instance=\"order-service:9404\"}",
          "legendFormat": "Order Service threads"
        }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "fillOpacity": 10 } }
      }
    },
    {
      "id": 10,
      "title": "Request Rate — API Gateway vs Order Service",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "sum(rate(vertx_http_server_requests_total{job=\"vertx-apps\", instance=\"api-gateway:8080\"}[1m]))",
          "legendFormat": "API Gateway req/s"
        },
        {
          "expr": "sum(rate(vertx_http_server_requests_total{job=\"vertx-apps\", instance=\"order-service:8080\"}[1m]))",
          "legendFormat": "Order Service req/s"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "fillOpacity": 15, "lineWidth": 2 } }
      }
    },
    {
      "id": 11,
      "title": "Avg Latency — API Gateway vs Order Service",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "sum(rate(vertx_http_server_response_time_seconds_sum{job=\"vertx-apps\", instance=\"api-gateway:8080\"}[1m])) / sum(rate(vertx_http_server_response_time_seconds_count{job=\"vertx-apps\", instance=\"api-gateway:8080\"}[1m]))",
          "legendFormat": "API Gateway avg"
        },
        {
          "expr": "sum(rate(vertx_http_server_response_time_seconds_sum{job=\"vertx-apps\", instance=\"order-service:8080\"}[1m])) / sum(rate(vertx_http_server_response_time_seconds_count{job=\"vertx-apps\", instance=\"order-service:8080\"}[1m]))",
          "legendFormat": "Order Service avg"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "fillOpacity": 15, "lineWidth": 2 } }
      }
    },
    {
      "id": 20,
      "title": "CPU Profile — API Gateway",
      "type": "flamegraph",
      "datasource": { "type": "grafana-pyroscope-datasource", "uid": "pyroscope-ds" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 40 },
      "targets": [
        {
          "profileTypeId": "process_cpu:cpu:nanoseconds:cpu:nanoseconds",
          "labelSelector": "{service_name=\"bank-api-gateway\"}"
        }
      ]
    },
    {
      "id": 21,
      "title": "CPU Profile — Order Service",
      "type": "flamegraph",
      "datasource": { "type": "grafana-pyroscope-datasource", "uid": "pyroscope-ds" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 52 },
      "targets": [
        {
          "profileTypeId": "process_cpu:cpu:nanoseconds:cpu:nanoseconds",
          "labelSelector": "{service_name=\"bank-order-service\"}"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["comparison", "vertx", "verticle", "profiling"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "Service Comparison — API Gateway vs Order Service",
  "uid": "service-comparison"
}
